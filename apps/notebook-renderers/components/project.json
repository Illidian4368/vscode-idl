{
  "name": "notebook-renderers-components",
  "$schema": "../../../node_modules/nx/schemas/project-schema.json",
  "projectType": "application",
  "prefix": "idl",
  "sourceRoot": "apps/notebook-renderers/components/src",
  "tags": [],
  "targets": {
    "build": {
      "executor": "@angular-devkit/build-angular:browser",
      "outputs": ["{options.outputPath}"],
      "options": {
        "outputPath": "dist/apps/notebook-renderers/components",
        "index": "apps/notebook-renderers/components/src/index.html",
        "main": "apps/notebook-renderers/components/src/main.ts",
        "polyfills": ["zone.js"],
        "tsConfig": "apps/notebook-renderers/components/tsconfig.app.json",
        "inlineStyleLanguage": "scss",
        "styles": [],
        "scripts": [],
        "stylePreprocessorOptions": {
          "includePaths": ["apps/notebook-renderers/components/src/app/styles"]
        }
      },
      "configurations": {
        "production": {
          "budgets": [
            {
              "type": "initial",
              "maximumWarning": "500kb",
              "maximumError": "5mb"
            },
            {
              "type": "anyComponentStyle",
              "maximumWarning": "2kb",
              "maximumError": "5mb"
            }
          ],
          "fileReplacements": [
            {
              "replace": "apps/notebook-renderers/components/src/environments/environment.ts",
              "with": "apps/notebook-renderers/components/src/environments/environment.prod.ts"
            }
          ],
          "outputHashing": "none"
        },
        "development": {
          "buildOptimizer": false,
          "optimization": false,
          "vendorChunk": true,
          "extractLicenses": false,
          "sourceMap": true,
          "namedChunks": true
        }
      },
      "defaultConfiguration": "production"
    },
    "serve": {
      "executor": "@angular-devkit/build-angular:dev-server",
      "configurations": {
        "production": {
          "browserTarget": "notebook-renderers-components:build:production"
        },
        "development": {
          "browserTarget": "notebook-renderers-components:build:development"
        }
      },
      "defaultConfiguration": "development",
      "options": {
        "stylePreprocessorOptions": {
          "includePaths": ["apps/notebook-renderers/components/src/app/styles"]
        }
      }
    },
    "extract-i18n": {
      "executor": "@angular-devkit/build-angular:extract-i18n",
      "options": {
        "browserTarget": "notebook-renderers-components:build"
      }
    },
    "lint": {
      "executor": "@nx/linter:eslint",
      "outputs": ["{options.outputFile}"],
      "options": {
        "lintFilePatterns": [
          "apps/notebook-renderers/components/**/*.ts",
          "apps/notebook-renderers/components/**/*.html"
        ]
      }
    },
    "test": {
      "executor": "@nx/jest:jest",
      "outputs": ["{workspaceRoot}/coverage/{projectRoot}"],
      "options": {
        "jestConfig": "apps/notebook-renderers/components/jest.config.ts",
        "passWithNoTests": true
      },
      "configurations": {
        "ci": {
          "ci": true,
          "codeCoverage": true
        }
      }
    },
    "serve-static": {
      "executor": "@nx/web:file-server",
      "options": {
        "buildTarget": "notebook-renderers-components:build"
      }
    }
  }
}
